%h2 Admin Job Dashboard
.action-table
  %table
    %thead.job_opportunity
      %tr
        %th Company Name
        %th Application Due Date
        %th Location
        %th Salary
        %th Job Title
        %th Application Type
        %th Job Opportunity Status
    %tbody
      - @job_opportunities.each do |job_opportunity|
        %tr
          %td= link_to job_opportunity.company.name, job_opportunity
          %td= job_opportunity.application_due_date
          %td= job_opportunity.location
          %td= job_opportunity.salary
          %td= job_opportunity.job_title
          %td= job_opportunity.application_type
          %td= job_opportunity.status
          %td= link_to 'Add Job', job_opportunity_my_job_opportunities_path(job_opportunity.id), method: :post